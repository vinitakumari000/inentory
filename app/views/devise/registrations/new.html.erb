<style>


.form_2 {
  max-width: 480px;
  padding: 30px 40px 20px;
  margin: 0 auto;
  background-color: #fff;
  border: 1px solid rgba(0,0,0,0.1); 
  margin-top: 1%;
  margin-bottom: 20px;
}

.heading_2{
  text-align: center;
  font-size: 30px;
  margin-bottom: 10px;
}

.rg-em-txt{
  font-size: 15px;
  padding-left: 5px;
  
}

.field3{
  position: relative;
  font-size: 16px;
  height: 35px;
  padding: 10px;
  width: 100%;    
}

.field_2{
    position: relative;
font-size: 16px;
height: auto;
    padding: 10px;
    margin-bottom: 0px;
}

.button_2{
  color: #ffffff;
  background-color: rgb(0, 140, 255);
  border: none;
  margin-top: 20px;
  width: 100%;
  height: 30px;
  border-radius: 25px;

}

.rg-login{
  text-align: center;
  padding-top: 20px;
  
}
</style>



<div class="form_2">

<h2 class="heading_2">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
   <div class="field_2">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, placeholder: "Name", :class => 'field3' %>
  </div>

  <div class="field_2">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email", :class => 'field3' %>
  </div>

  <div class="field_2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Create password", :class => 'field3' %>
  </div>

  <div class="field_2">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", :class => 'field3' %>
  </div>

  <div class="actions_2">
    <%= f.submit "Sign up", :class => 'button_2' %>
  </div>
<% end %>
<div class="rg-login">
<%= render "devise/shared/links" %>
</div>
</div>
