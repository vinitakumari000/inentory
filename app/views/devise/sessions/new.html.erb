<style>
   
.form {
  max-width: 380px;
  padding: 15px 35px 30px;
  margin: 0 auto;
  background-color: #fff;
  border: 1px solid rgba(0,0,0,0.1); 
  margin-top: 5%;
}


.heading{
  margin-bottom: 30px;
  text-align: center;
  margin-top: 10px;
}

.field{
    position: relative;
font-size: 16px;
height: auto;
    padding: 10px;
    margin-bottom: 10px;
      
}

.field2{
  position: relative;
  font-size: 16px;
  height: 35px;
  padding: 10px;
  width: 100%;
}

/*.actions{
    text-align: center;
    background-color: rgb(14, 116, 250);
    border-style: none;
    border: none;
    height: 30px;
    margin-bottom: 10px;
    
}*/

.button{
  color: #ffffff;
  background-color: rgb(0, 140, 255);
  border: none;
  margin-top: 2px;
  width: 100%;
  height: 30px;
  margin-bottom: 10px;
  border-radius: 25px;
  
}

.log-forget{
  float: right;
  font-size: 15px;

}

.log-singup{
      padding-left: 80px;
      
}


</style>




<body>
<div class="form">
<h2 class="heading">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => 'field2' %>
    
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", :class => 'field2' %>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), :class => 'log-forget' %><br />
  <% end %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => 'button' %>
  </div>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Create a new account", new_registration_path(resource_name), :class => 'log-singup' %><br />
  <% end %>

</form>
</div>
</body>
